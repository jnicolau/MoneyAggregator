{
  "manifest_version":2,
  "name":"Money Aggregator",
  "description":"Aggregate multiple bank accounts under the same app",
  "version":"0.1",
  "author": "Joao Oliveira",

  "browser_action": {
    "default_title": "Money Aggregator",
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["app/popup.js"]
  },
  
  "permissions":[
    "tabs",
    "http://pluralsight.com/*",
    "<all_urls>",
    "*://*/*",
    "http://*/",
    "https://*/",
    "https://btcjam.com/*",
    "webRequest",
    "webNavigation"
  ]
}